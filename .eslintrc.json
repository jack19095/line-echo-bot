{
  "extends": [
    "standard",     
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "max-len": ["error", 200, 2, { "ignoreStrings": true }],
    "semi": ["error", "always"],
    "comma-dangle": "off",
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"]
  },
  "plugins": [
    "import"
  ]
}

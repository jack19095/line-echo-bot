<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Special version of Bootstrap that only affects content wrapped in .bootstrap-iso -->
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css" />
  <script src="//code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

  <script src="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
</head>

<body>
  <div class="ui container">
    <form class="ui form" method="post" action="/user/register" />
    <input type="hidden" name="lineId" value="<%= lineId %>">
    <input type="hidden" name="type" value="<%= type %>">
    <div class="field">
      <label>身份</label>
      <input name="type" placeholder="<%= type %>" value="<%= type %>" disabled="" tabindex="-1">
    </div>
    <div class="field">
      <label>手機號碼</label>
      <input type="text" name="phone" placeholder="0912 345 678">
    </div>
    <div class="field">
      <label>姓名</label>
      <input type="text" name="name" placeholder="Name">
    </div>
    <div class="field">
      <label>公司名稱</label>
      <input type="text" name="company" placeholder="Company">
    </div>
    <div class="field">
      <label>電子信箱</label>
      <input type="text" name="email" placeholder="Email">
    </div>
    <button class="ui primary button" type="submit">Submit</button>
    <button class="ui clear button">Clear</button>
    <div class="ui error message"></div>
    </form>
  </div>
</body>

<script>
  $('.ui.form').form({
    fields: {
      phone: {
        identifier: 'phone',
        rules: [{
          type: 'empty',
          prompt: '請輸入電話號碼'
        }]
      },
      name: {
        identifier: 'name',
        rules: [{
          type: 'empty',
          prompt: '請輸入姓名'
        }]
      },
      company: {
        identifier: 'company',
        rules: [{
          type: 'empty',
          prompt: '請輸入公司名稱'
        }]
      },
      email: {
        identifier: 'email',
        rules: [{
          type: 'email',
          prompt: '電子郵件空白或電子郵件不合法'
        }]
      },
    }
  });
</script>

</html>
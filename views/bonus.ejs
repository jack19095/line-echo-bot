<html>

<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Special version of Bootstrap that only affects content wrapped in .bootstrap-iso -->
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css" />
  <script src="//code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

  <script src="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
  <script>
    $(function () {
      $('.ui.accordion')
        .accordion();
    });
  </script>
  <style>
    #title {
      margin-top: 10px;
      margin-bottom: 10px;
    }
  </style>
</head>

<body>
  <div class="ui container">
    <h2 id="title" class="ui horizontal divider header">
      紅利點數
    </h2>

    <div class="ui accordion aligned divided list">
      <div class="item">
        <div class="title">
          <i class="dropdown icon"></i>
          <label>紅利金</label>
          <div class="right floated content">
            <label>0</label>
          </div>
        </div>
        <div class="content">
          <div class="ui relaxed divided list">
          </div>
        </div>
      </div>
      <div class="item">
        <div class="title">
          <i class="dropdown icon"></i>
          <label>紅利品</label>
        </div>
        <div class="content">
          <p class="transition hidden">紅利品內容</p>
        </div>
      </div>
      <div class="item">
        <div class="title">
          <i class="dropdown icon"></i>
          <label>紅利紀錄</label>
        </div>
        <div class="content">
          <div class="ui container">
            <table id="content" class="ui very basic unstackable small table">
              <thead>
                <tr>
                  <% for (let title of titles) { %>
                    <th class="collapsing">
                      <%= title %>
                    </th>
                    <% } %>
                </tr>
              </thead>
              <tbody>
                <% for (let item of data) { %>
                  <tr>
                    <% for (let key of keys) { %>
                      <td class="collapsing">
                        <%= item[key] %>
                      </td>
                      <% } %>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
<html>

<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

  <!-- Special version of Bootstrap that only affects content wrapped in .bootstrap-iso -->
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css" />
  <script src="//code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

  <script src="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>

  <script>
    $(document).ready(function () {
      $('.ui.form').form({
        fields: {
          name: {
            identifier: 'name',
            rules: [{
              type: 'empty',
              prompt: '請填寫公司名稱'
            }]
          },
          companyId: {
            identifier: 'companyId',
            rules: [{
              type: 'empty',
              prompt: '請填寫統一編號'
            }]
          },
          phone: {
            identifier: 'phone',
            rules: [{
              type: 'empty',
              prompt: '請填寫公司電話'
            }]
          },
          email: {
            identifier: 'email',
            rules: [{
              type: 'empty',
              prompt: '請填寫 Email'
            }]
          },
        }
      });
    })
  </script>
  <style>
    #title {
      margin-top: 10px;
      margin-bottom: 10px;
      text-align: center;      
    }
    #closeDate {
      width: auto;
    }
  </style>
</head>

<body>
  <div class="ui container">
    <h3 id="title">
      客戶公司資料填寫
    </h3>
  </div>
  
  <div class="ui section divider"></div>

  <div class="ui container">
    <form class="ui form" method="post" action="/company/create" />
    <input type="hidden" name="userId" value="<%= userId %>">
    <div class="inline fields">
      <div class="two wide field">
        <label>客戶公司名稱</label>
      </div>
      <div class="field">
        <input type="text" name="name" placeholder="宇聯科技">
      </div>
    </div>
    <div class="inline fields">
      <div class="two wide field">
        <label>客戶公司統編</label>
      </div>
      <div class="field">
        <input type="text" name="companyId" placeholder="84149961">
      </div>
    </div>
    <div class="inline fields">
      <div class="two wide field">
        <label>客戶公司地址</label>
      </div>
      <div class="field">
        <input type="text" name="address" placeholder="台北市">
      </div>
    </div>
    <div class="inline fields">
      <div class="two wide field">
        <label>客戶電話</label>
      </div>
      <div class="field">
        <input type="text" name="phone" placeholder="0912345678">
      </div>
    </div>
    <div class="inline fields">
      <div class="two wide field">
        <label>客戶 E-mail</label>
      </div>
      <div class="field">
        <input type="text" name="email" placeholder="hi@exmaple.com">
      </div>
    </div>
    <button class="ui primary button" type="submit">確認</button>
    <button class="ui clear button">清除重填</button>
    <div class="ui error message"></div>
    </form>
  </div>
</body>

</html>